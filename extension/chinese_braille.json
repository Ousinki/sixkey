{
  "meta": {
    "name": "Chinese Current Braille (现行盲文)",
    "standard": "GB/T 15720-1995",
    "description": "Phonetic braille based on Hanyu Pinyin. Each syllable = initial(声母) + final(韵母) + optional tone(声调).",
    "source": "教育部 moe.gov.cn 现行盲文方案, 《基础盲文》教材",
    "note": "In current standard, j/q/x share dot patterns with g/k/h because they are predictable from the following final. o/e share the same pattern. ong/ueng share the same pattern."
  },
  "initials": {
    "b":   { "dots": [1, 2],          "char": "⠃" },
    "p":   { "dots": [1, 2, 3, 4],    "char": "⠏" },
    "m":   { "dots": [1, 3, 4],       "char": "⠍" },
    "f":   { "dots": [1, 2, 4],       "char": "⠋" },
    "d":   { "dots": [1, 4, 5],       "char": "⠙" },
    "t":   { "dots": [2, 3, 4, 5],    "char": "⠞" },
    "n":   { "dots": [1, 3, 4, 5],    "char": "⠝" },
    "l":   { "dots": [1, 2, 3],       "char": "⠇" },
    "g":   { "dots": [1, 2, 4, 5],    "char": "⠛" },
    "k":   { "dots": [1, 3],          "char": "⠅" },
    "h":   { "dots": [1, 2, 5],       "char": "⠓" },
    "j":   { "dots": [1, 2, 4, 5],    "char": "⠛", "note": "Same as g" },
    "q":   { "dots": [1, 3],          "char": "⠅", "note": "Same as k" },
    "x":   { "dots": [1, 2, 5],       "char": "⠓", "note": "Same as h" },
    "zh":  { "dots": [3, 4],          "char": "⠌" },
    "ch":  { "dots": [1, 2, 3, 4, 5], "char": "⠟" },
    "sh":  { "dots": [1, 5, 6],       "char": "⠱" },
    "r":   { "dots": [2, 4, 5],       "char": "⠚" },
    "z":   { "dots": [1, 3, 5, 6],    "char": "⠵" },
    "c":   { "dots": [1, 4],          "char": "⠉" },
    "s":   { "dots": [2, 3, 4],       "char": "⠎" }
  },
  "finals": {
    "a":    { "dots": [3, 5],             "char": "⠔" },
    "o":    { "dots": [2, 6],             "char": "⠢", "note": "Same as e" },
    "e":    { "dots": [2, 6],             "char": "⠢", "note": "Same as o" },
    "i":    { "dots": [2, 4],             "char": "⠊" },
    "u":    { "dots": [1, 3, 6],          "char": "⠥" },
    "v":    { "dots": [3, 4, 6],          "char": "⠬", "note": "ü" },
    "er":   { "dots": [1, 2, 3, 5],       "char": "⠗" },
    "ai":   { "dots": [2, 4, 6],          "char": "⠪" },
    "ei":   { "dots": [2, 3, 4, 6],       "char": "⠮" },
    "ao":   { "dots": [2, 3, 5],          "char": "⠖" },
    "ou":   { "dots": [1, 2, 3, 5, 6],    "char": "⠷" },
    "an":   { "dots": [1, 2, 3, 6],       "char": "⠧" },
    "en":   { "dots": [3, 5, 6],          "char": "⠴" },
    "ang":  { "dots": [2, 3, 6],          "char": "⠦" },
    "eng":  { "dots": [3, 4, 5, 6],       "char": "⠼" },
    "ong":  { "dots": [2, 5, 6],          "char": "⠲", "note": "Same as ueng" },
    "ia":   { "dots": [1, 2, 4, 6],       "char": "⠫" },
    "ie":   { "dots": [1, 5],             "char": "⠑" },
    "iao":  { "dots": [3, 4, 5],          "char": "⠜" },
    "iou":  { "dots": [1, 2, 5, 6],       "char": "⠳", "note": "Also written as iu" },
    "ian":  { "dots": [1, 4, 6],          "char": "⠩" },
    "in":   { "dots": [1, 2, 6],          "char": "⠣" },
    "iang": { "dots": [1, 3, 4, 6],       "char": "⠭" },
    "ing":  { "dots": [1, 6],             "char": "⠡" },
    "iong": { "dots": [1, 4, 5, 6],       "char": "⠹" },
    "ua":   { "dots": [1, 2, 3, 4, 5, 6], "char": "⠿" },
    "uo":   { "dots": [1, 3, 5],          "char": "⠕" },
    "uai":  { "dots": [1, 3, 4, 5, 6],    "char": "⠽" },
    "uei":  { "dots": [2, 4, 5, 6],       "char": "⠺", "note": "Also written as ui" },
    "uan":  { "dots": [1, 2, 4, 5, 6],    "char": "⠻" },
    "un":   { "dots": [2, 5],             "char": "⠒", "note": "Also written as uen" },
    "uang": { "dots": [2, 3, 5, 6],       "char": "⠶" },
    "ve":   { "dots": [2, 3, 4, 5, 6],    "char": "⠾", "note": "üe" },
    "van":  { "dots": [1, 2, 3, 4, 6],    "char": "⠯", "note": "üan" },
    "vn":   { "dots": [4, 5, 6],          "char": "⠸", "note": "ün" }
  },
  "tones": {
    "1": { "dots": [1],    "char": "⠁", "name": "阴平 (flat)" },
    "2": { "dots": [2],    "char": "⠂", "name": "阳平 (rising)" },
    "3": { "dots": [3],    "char": "⠄", "name": "上声 (dipping)" },
    "4": { "dots": [2, 3], "char": "⠆", "name": "去声 (falling)" }
  },
  "rules": {
    "initial_only": "zhi/chi/shi/ri/zi/ci/si: write only the initial, omit final -i",
    "jqx_u": "j/q/x + u → ü (v): ju=j+v, qu=q+v, xu=x+v",
    "zero_initial": "yi→i, wu→u, yu→v; ya→ia, wa→ua, etc.",
    "shared_initials": "g=j, k=q, h=x (distinguished by following final)",
    "shared_finals": "o=e, ong=ueng (same braille pattern)"
  },
  "examples": {
    "天 (tiān)": {
      "pinyin": "tian1",
      "braille": "⠞⠩",
      "breakdown": ["t → ⠞ (dots 2345)", "ian → ⠩ (dots 146)"]
    },
    "你好 (nǐ hǎo)": {
      "pinyin": "ni3 hao3",
      "braille": "⠝⠊⠓⠖",
      "breakdown": ["n → ⠝", "i → ⠊", "h → ⠓", "ao → ⠖"]
    },
    "知识 (zhīshi)": {
      "pinyin": "zhi1 shi",
      "braille": "⠌⠱",
      "breakdown": ["zh → ⠌ (initial only, -i omitted)", "sh → ⠱ (initial only, -i omitted)"]
    }
  }
}
